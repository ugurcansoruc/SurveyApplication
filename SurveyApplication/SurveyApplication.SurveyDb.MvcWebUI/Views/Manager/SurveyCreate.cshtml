@using SurveyApplication.SurveyDb.Entities.Concrete
@model SurveyApplication.SurveyDb.MvcWebUI.Models.SurveyViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/_ManagerLayout.cshtml";
}

    <div class="col-md-2">
        <a class="list-group-item active">Anket Bilgileri</a>
    </div>
<div class="col-md-8">
    <hr/>
    <form asp-controller="Manager" asp-action="SurveyQuestionCreate" method="post">
        <div class="form-group">
            <h3>Anket İsmi</h3>
            <input asp-for="Survey.Name" class="form-control" />
            <span asp-validation-for="Survey.Name"></span>
        </div>
        <div class="form-group">
            <h3>Anket Açıklaması</h3>
            <input asp-for="Survey.Description" class="form-control" />
            <span asp-validation-for="Survey.Description"></span>
        </div>

        <input type="submit" value="Devam Et" class="btn btn-success" />
    </form>
</div>
