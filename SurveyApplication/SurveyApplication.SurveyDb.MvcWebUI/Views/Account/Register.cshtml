@model SurveyApplication.SurveyDb.MvcWebUI.Models.AccountViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/_AccountLayout.cshtml";
}


<div class="container">
    <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign Up</div>
                <div style="float:right; font-size: 85%; position: relative; top:-10px"><a asp-controller="Account" asp-action="Login">Sign In</a></div>
            </div>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                    <div class="form-group">
                        <label asp-for="Person.FirstName" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="Person.FirstName" type="text" class="form-control" placeholder="User Name">
                            <span asp-validation-for="Person.FirstName"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Person.LastName" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="Person.LastName" type="text" class="form-control" placeholder="User Name">
                            <span asp-validation-for="Person.LastName"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Person.Email" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="Person.Email" type="text" class="form-control" placeholder="User Name">
                            <span asp-validation-for="Person.Email"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Person.Password" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="Person.Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Person.Password"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="User.Age" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="User.Age" class="form-control" placeholder="Email Address">
                            <span asp-validation-for="User.Age"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Cinsiyet</label>
                        <select asp-for="User.GenderId" class="form-control"
                                asp-items="@(new SelectList(Model.Genders,"Id","Name"))"></select>
                        <span asp-validation-for="User.GenderId"></span>
                    </div>
                    <div class="form-group">
                        <label>Şehir</label>
                        <select asp-for="User.CityId" class="form-control"
                                asp-items="@(new SelectList(Model.Cities,"Id","Name"))"></select>
                        <span asp-validation-for="User.CityId"></span>
                    </div>
                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-info" value="Register"><i class="icon-hand-right"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>