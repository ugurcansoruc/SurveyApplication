@model SurveyApplication.SurveyDb.MvcWebUI.Models.UserUpdateListViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/_UserLayout.cshtml";
}

    <div>
        <div class="col-md-2">
            <a class="list-group-item active">Bilgiler</a>
        </div>
        <div class="col-md-8">
            <form asp-controller="User" asp-action="MyAccount" method="post">
                <div class="form-group">
                    <label>Ad</label>
                    <input asp-for="Person.FirstName" class="form-control" placeholder="Question Text" />
                    <span asp-validation-for="Person.FirstName"></span>
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    <input asp-for="Person.LastName" class="form-control" placeholder="Question Text" />
                    <span asp-validation-for="Person.LastName"></span>
                </div>
                <div class="form-group">
                    <label>Yaş</label>
                    <input asp-for="User.Age" class="form-control" placeholder="Question Text" />
                    <span asp-validation-for="User.Age"></span>
                </div>

                <div class="form-group">
                    <label>Cinsiyet</label>
                    <select asp-for="User.GenderId" class="form-control"
                            asp-items="@(new SelectList(Model.Genders,"Id","Name"))"></select>
                    <span asp-validation-for="User.GenderId"></span>
                </div>
                <div class="form-group">
                    <label>Şehir</label>
                    <select asp-for="User.CityId" class="form-control"
                            asp-items="@(new SelectList(Model.Cities,"Id","Name"))"></select>
                    <span asp-validation-for="User.CityId"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Person.Email" class="form-control" placeholder="Question Text" />
                    <span asp-validation-for="Person.Email"></span>
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input asp-for="Person.Password" class="form-control" placeholder="Question Text" />
                    <span asp-validation-for="Person.Password"></span>
                </div>
                <input type="hidden" asp-for="Person.Id" />
                <input type="hidden" asp-for="Person.PersonTypeId" />
                <input type="hidden" asp-for="User.PersonId" />
                <input type="submit" value="Güncelle" class="btn btn-success pull-right" />
            </form>
        </div>
    </div>